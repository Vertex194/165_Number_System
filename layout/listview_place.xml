<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    android:background="@drawable/rectangle_drawable"
    android:padding="7sp">
    <TextView
        android:id="@+id/id_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/skill_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2mm"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/phone_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/skill_listview"
        android:paddingLeft="5sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/datetime_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phone_listview"
        android:paddingLeft="5sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/note_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phone_listview"
        android:paddingLeft="5sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>